# force it on because of high memory usage
gtk-single-instance = true

gtk-custom-css = tab-bar.css


# Outlook
# ==========================
font-family          = Iosevka
window-padding-x     = 15
window-padding-y     = 15
font-size            = 14
theme                = Catppuccin Mocha
#window-padding-color = extend

# Keybindings
# =========================
keybind = ctrl+shift+j=scroll_page_lines:5
keybind = ctrl+shift+k=scroll_page_lines:-5
keybind = ctrl+shift+r=reload_config
keybind = ctrl+shift+x=write_screen_file:open

# Prevent ghostty new tab
keybind = ctrl+shift+t=unbind

shell-integration          = detect
shell-integration-features = true

